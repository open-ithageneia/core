{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "react-jsx",

		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"isolatedModules": true,
		"resolveJsonModule": true,

		"baseUrl": ".",
		"paths": {
			"@/*": ["./frontend/js/*"]
		},

		"types": ["vite/client"]
	},
	"include": [
		"frontend/js/**/*.ts",
		"frontend/js/**/*.tsx",
		"frontend/js/**/*.d.ts",
		"frontend/vite-env.d.ts"
	]
}
